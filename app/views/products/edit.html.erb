<div class="page-header">
  <h1>Edit Product #<%=@product_list.id%></h1>
</div>

<form action="/products/<%=@product_list.id%>/update">
  <div class="form-group">
    <label>Product Name:</label>
    <input value=<%= @product_list.name %> name="name" type="text" class="form-control input-md" >
  </div>
  <div class="form-group">
    <label>Depth:</label>
    <input value=<%= @product_list.depth %> name="depth" type="integer" class="form-control input-md" >
  </div>
  <div class="form-group">
    <label>Carat:</label>
    <input value=<%= @product_list.carat %> name="carat" type="integer" class="form-control input-md">
  </div>
  <div class="form-group">
    <label>Our price:</label>
    <input value=<%= @product_list.ourprice %> name="ourprice" type="integer" class="form-control input-md" >
  </div>
   <div class="form-group">
    <label>Retail price:</label>
    <input value=<%= @product_list.retailprice %> name="retailprice" type="integer" class="form-control input-md" >
  </div>
  <button type="submit" class="btn btn-success btn-md">Update</button>
  or
  <a href="/products/<%=@product_list.id%>/show">Cancel</a>
</form>
