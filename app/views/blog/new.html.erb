<h1>New blog post entry!</h1>

<form action="/blog/create">

  <div class ="form-group">
    <input name ="title" type="string" class="form-control input-md" placeholder ="Title">
  </div>

  <div class ="form-group">
    <input name ="subhead" type="string" class="form-control input-md" placeholder ="Subheader">
  </div>

  <div class ="form-group">
    <input name ="author" type="string" class="form-control input-md" placeholder ="Author">
  </div>

  <div class ="form-group">
    <input name ="date" type="date" class="form-control input-md">
  </div>

  <div class ="form-group">
    <input name ="image" type="string" class="form-control input-md" placeholder ="http://...">
  </div>

  <select name="blogcategory_id">
    <% Blogcategory.all.each do |category| %>
        <option value = "<%=category.id%>"><%=category.category%></option>
    <% end %>
  </select>

  <br>
  <br>

  <div class ="form-group">
    <textarea name ="text" type="text" class="form-control input-md" placeholder ="Write blog post here."></textarea>
  </div>

  <input type ="submit" class = "btn btn-lg btn-success" value="Enter New Blog Post">

</form>

