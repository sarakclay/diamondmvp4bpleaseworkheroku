<head>
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
</head>

<h1>Sign up for an account</h1>

<form action="/users/create">

  <div class ="form-group">
  <input name ="first_name" type="string" class="form-control input-md" placeholder ="First Name">
  </div>

  <div class ="form-group">
  <input name ="last_name" type="string" class="form-control input-md" placeholder ="Last Name">
  </div>

  <div class ="form-group">
  <input name ="email" type="string" class="form-control input-md" placeholder ="Email Address">
  </div>

  <div class ="form-group">
  <input name ="password" type="password" class="form-control input-md" placeholder ="Password">
  </div>

  <input type ="submit" class = "btn btn-lg btn-success" value="Sign Up">

</form>

