<div class="page-header">
  <h1>Edit Product Blog post entry #<%=@blog_list.id%>: <%=@blog_list.title%></h1>
</div>

<form action="/blog/<%=@blog_list.id%>/update">

  <div class ="form-group">
    <label>Title:</label>
      <input value = <%= @blog_list.title %> name ="title" type="string" class="form-control input-md" >
  </div>

  <div class ="form-group">
    <label>Subheader:</label>
      <input value = <%= @blog_list.subhead %> name ="subhead" type="string" class="form-control input-md">
  </div>

  <div class ="form-group">
    <label>Author:</label>
      <input value = <%= @blog_list.author %> name ="author" type="string" class="form-control input-md">
  </div>

  <div class ="form-group">
    <label>Date:</label>
      <input value = <%= @blog_list.date %> name ="date" type="date" class="form-control input-md">
  </div>

  <div class ="form-group">
    <label>Image:</label>
      <input value = <%= @blog_list.image %> name ="image" type="string" class="form-control input-md">
  </div>

  <label>Category ID:</label>
    <select name="blogcategory_id">
      <% Blogcategory.all.each do |category| %>
        <option value = "<%=category.id%>"><%=category.category%></option>
      <% end %>
    </select>

  <br>
  <br>

  <div class ="form-group">
    <label>Blog Text:</label>
      <textarea value = <%= @blog_list.text %> name ="text" type="text" class="form-control input-md"></textarea>
  </div>

  <button type="submit" class="btn btn-success btn-md">Update Blog Post</button>
  or
  <a href="/blog/<%=@blog_list.id%>/show">Cancel</a>

</form>

